<% @book_comments.each do |book_comment| %>
	<tr>
		<td>
			<%= link_to user_path(book_comment.user) do %>
				<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
			<%= book_comment.user.name %>
			<% end %>
		</td>
		<td>
          <%= book_comment.content %>
		</td>
		<% if @user == current_user %>
			<td>
				<%= link_to "Destroy", book_book_comments_path(id: book_comment.id,book_id: @book.id), method: :delete, remote: true, class: "btn-sm btn-danger" %>
			</td>
		<% end %>
	</tr>
<% end %>