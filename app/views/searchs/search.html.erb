<div class="container">
  <div class="row">
    <div class="col-xs-1">
    </div>
    <div class="col-xs-10">
    <% if @model == 'user' && @datas != nil%>
    <h3> Users search for <%= @content %></h3>
    <table class="table">
      <thead>
      	<tr>
      	  <th></th>
      	  <th>Name</th>
      	  <th></th>
      	</tr>
      </thead>
      <tboy>
      <% @datas.each do |user| %>
        <tr>
          <td>
          	<%= link_to user_path(user) do %>
		    <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
	        <%= user.name %>
	        <% end %>
	      </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
      </tboy>
    </table>
    <% elsif @datas %>
    <h3> Books search for <%= @content %></h3>
    <table class="table">
      <thead>
      	<tr>
      	  <th></th>
      	  <th>Title</th>
      	  <th>Opinion</th>
      	</tr>
      </thead>
      <tboy>
      <% @datas.each do |book| %>
        <tr>
          <td>
          	<%= link_to user_path(book.user) do %>
		    <%= attachment_image_tag(book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
	        <%= book.user.name %>
	        <% end %>
	      </td>
          <td><%= link_to book.title, book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tboy>
    </table>
    <% end %>
    </div>
  </div>
</div>
